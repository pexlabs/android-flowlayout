<resources>
    <declare-styleable name="FlowLayout">
        <attr name="android:orientation" />
        <attr name="layoutDirection" format="enum">
            <enum name="ltr" value="0"/>
            <enum name="rtl" value="1"/>
        </attr>
        <attr name="debugDraw" format="boolean"/>
        <attr name="maxLines" format="integer"/>
        <attr name="weightDefault" format="float" />
        <attr name="android:gravity"/>
        <attr name="count_view_size" format="integer" />
        <attr name="count_view_text_color" format="color" />
        <attr name="count_view_border_color" format="color" />
        <attr name="autocompletview_text_color" format="color" />
        <attr name="autocompletview_text_size" format="dimension" />
        <attr name="chip_backgroundColor" format="color" />
        <attr name="showChipDetailed" format="boolean" />
        <attr name="chip_detailed_textColor" format="color" />
        <attr name="chip_detailed_backgroundColor" format="color" />
        <attr name="chip_detailed_deleteIconColor" format="color" />
    </declare-styleable>
    <declare-styleable name="FlowLayout_LayoutParams">
        <attr name="layout_newLine" format="boolean"/>
        <attr name="layout_weight" format="float"/>
        <attr name="android:layout_gravity"/>
    </declare-styleable>

    <declare-styleable name="ChipView">
        <attr name="label" format="string" />
        <attr name="labelColor" format="color" />
        <attr name="labelAvatarPaddingExtra" format="dimension" />
        <attr name="labelTextSize" format="dimension" />
        <attr name="hasAvatarIcon" format="boolean" />
        <attr name="avatarIcon" format="reference" />
        <attr name="deletable" format="boolean" />
        <attr name="deleteIcon" format="reference" />
        <attr name="deleteIconColor" format="color" />
        <attr name="backgroundColor" format="color" />
        <attr name="borderColor" format="color" />
        <attr name="borderSize" format="dimension" />
        <attr name="textAvatarSpacing" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ChipAvatarImageView">
        <attr name="image_mode" format="enum">
            <enum name="image_circle" value="0"/>
            <enum name="image_round_rect" value="1"/>
        </attr>
        <attr name="image_corner_radius" format="dimension"/>
    </declare-styleable>

</resources>
